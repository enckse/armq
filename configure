#!/bin/bash

_integrate=""
_dmdflags=""
case $1 in
    "r3")
        if [ -z "$ARMQ_HOST" ]; then
            echo "armq host required for this integration"
            exit 1
        fi
        _dmdflags="R3"
        _integrate="r3"
        ;;
esac

export ARMQ_PORT=$ARMQ_PORT
export ARMQ_HOST=$ARMQ_HOST
export DISABLE=$DISABLE
export RENAMES=$_renames
export ARMQ_INTEGRATE=$_integrate
if [ ! -z "$_dmdflags" ]; then
    export DMD_FLAGS="-version=$_dmdflags"
fi
./configure.sh
